<h1>Create a new Pet</h1>
<form action="/pets" method="POST">
  <label>Name:</label>

  <br>

  <input type="text" id="pet_name" name="pet[name]">

  <br>

  <label>Choose an existing owner:</label>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_ids][]" id="<%= owner.id %>" value="<%= owner.id %>"> <%= owner.name%> </input><br>
  <% end %>

  <label>Create a new owner:</label> <br>
  <label>Owner Name:</label>
  <input type="text" name="owner[name]" id="owner_name"></input> <br> <br>

  <input type="submit" value="Create Pet">
</form>
