<h1>Update Owner</h1>
<form action="/owners/<%= @owner.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label>Owner's Name:</label>
  <input type="text" id="owner_name" name="owner[name]" value="<%= @owner.name%>">
  <br>

  <p>Select an existing pet or create a new one below.</p>
  <h3>Existing Pets</h3>

  <% @pets.each do |pet| %>
    <input type="checkbox" name="owner[pet_ids][]" id="<%= pet.id %>" value="<%= pet.id %>"
      <%= 'checked' if @owner.pets.include?(pet) %>>
      <%= pet.name %>
    </input><br>
  <% end %>
  <br>

  <h3>New Pet</h3>
  <label>Name:</label><br>
  <input type="text" id="pet_name" name="pet[name]">

  <input type="submit" id="submit" value="Update Owner">
</form>
