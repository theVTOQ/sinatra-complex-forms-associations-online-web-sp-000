<h1>Update Pet</h1>
<form action="/pets/<%= @pet.id %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <label>Pet's Name:</label>
  <input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name%>">
  <br>

  <p>Select an existing owner or create a new one below.</p>
  <h3>Existing Owners</h3>

  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_ids][]" id="<%= owner.id %>" value="<%= owner.id %>"
      <%= 'checked' if @pet.owner.id == owner.id %>>
      <%= owner.name %>
    </input><br>
  <% end %>
  <br>

  <h3>New Owner</h3>
  <label>Name:</label><br>
  <input type="text" id="owner_name" name="owner[name]">

  <input type="submit" id="submit" value="Update Pet">
</form>
